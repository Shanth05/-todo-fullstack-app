{
  "name": "todo-fullstack-app",
  "version": "1.0.0",
  "description": "Full-stack Todo Task Management Application",
  "scripts": {
    "start": "docker-compose up --build",
    "start:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v --rmi all",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "build": "docker-compose build",
    "logs": "docker-compose logs -f",
    "db:reset": "docker-compose down -v && docker-compose up -d database && sleep 10 && docker-compose up --build"
  },
  "devDependencies": {
    "cypress": "^13.6.0"
  },
  "keywords": [
    "todo",
    "task-management",
    "react",
    "nodejs",
    "postgresql",
    "docker"
  ],
  "author": "Full Stack Developer",
  "license": "MIT"
}
